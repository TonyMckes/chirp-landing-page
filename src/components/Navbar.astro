---
import menu from '../assets/Hamburger Menu.svg'
import twitterIcon from '../assets/Twitter.svg'
import Link from './Link.astro'
---

<header>
  <div class='container'>
    <a class='logo' href='/'> Chirp.</a>
    <button aria-label='Open menu'>
      <img src={menu} alt='Menu icon' />
    </button>
    <nav>
      <ul>
        <li>
          <Link variant='secondary' href='#'>Home</Link>
        </li>
        <li>
          <Link variant='secondary' href='#pricing'>Pricing</Link>
        </li>
        <li>
          <Link variant='secondary'>FAQ</Link>
        </li>
        <li>
          <Link>
            <img src={twitterIcon} alt='Twitter Icon' /> Sign in with Twitter
          </Link>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  header {
    margin-top: 2rem;
  }
  header nav {
    display: none;
  }
  header button {
    padding: 1rem;
    cursor: pointer;
    background: transparent;
    border: none;
  }
  header > div {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  ul {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  @media (min-width: 768px) {
    header nav {
      display: block;
    }
    header button {
      display: none;
    }
  }
</style>
